@model DersProgramiMvc.Models.Ders

@{
    ViewData["Title"] = "Ders Güncelle";
}

<h2>Ders Güncelle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="DersAdi"></label>
        <input asp-for="DersAdi" class="form-control" />
        <span asp-validation-for="DersAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Saat"></label>
        <input asp-for="Saat" class="form-control" />
        <span asp-validation-for="Saat" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gun"></label>
        <input asp-for="Gun" class="form-control" />
        <span asp-validation-for="Gun" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>