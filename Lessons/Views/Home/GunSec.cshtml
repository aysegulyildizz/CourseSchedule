@{
    ViewData["Title"] = "Güne Göre Ders Bul";
}

<h2>Güne Göre Ders Bul</h2>

<form method="post" asp-action="GunSec">
    <div class="form-group">
        <label>Gün giriniz (örneğin: Pazartesi)</label>
        <input type="text" name="gun" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Ara</button>
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</form>

@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Hata</div>
}

@if (ViewBag.Ders != null)
{
    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">Gün: @ViewBag.Gun</h5>
            <p class="card-text">Ders: @ViewBag.Ders.DersAdi</p>
            <p class="card-text">Saat: @ViewBag.Ders.Saat</p>
        </div>
    </div>
}