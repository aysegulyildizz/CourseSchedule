@model IEnumerable<DersProgramiMvc.Models.Ders>

@{
    ViewData["Title"] = "Ders Listesi";
}

<h2>Ders Listesi</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Ders Ekle</a>
    <a asp-action="GunSec" class="btn btn-secondary">Güne Göre Ders Bul</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Ders Adı</th>
        <th>Saat</th>
        <th>Gün</th>
        <th>İşlemler</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var ders in Model)
    {
        <tr>
            <td>@ders.DersAdi</td>
            <td>@ders.Saat</td>
            <td>@ders.Gun</td>
            <td>
                <a asp-action="Edit" asp-route-id="@ders.Id" class="btn btn-warning btn-sm">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@ders.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>